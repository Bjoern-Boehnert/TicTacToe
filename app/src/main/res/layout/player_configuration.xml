<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:useDefaultMargins="true"
    tools:context=".activities.PlayerConfigurationActivity">

    <!--Player 1-->
    <TextView
        android:layout_gravity="fill"
        android:background="#D3D3D3"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Player name 1:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/playerOneNameEditText"
        android:layout_column="1"
        android:ems="10"
        android:singleLine="true" />

    <TextView
        android:layout_gravity="fill"
        android:background="#D3D3D3"
        android:layout_row="1"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:text="Player color: 1"
        android:textSize="20dp" />

    <Button
        android:layout_gravity="fill"
        android:id="@+id/playerOneColorPickerButton"
        android:layout_column="1"
        android:onClick="onPlayerColorButtonClick"
        android:text="Change\ncolor" />

    <!--Player 2-->
    <TextView
        android:layout_gravity="fill"
        android:background="#F5F5F5"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Player name 2:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/playerTwoNameEditText"
        android:layout_column="1"
        android:ems="10"
        android:singleLine="true" />

    <TextView
        android:layout_gravity="fill"
        android:background="#F5F5F5"
        android:layout_row="3"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:text="Player color: 2"
        android:textSize="20dp" />

    <Button
        android:layout_gravity="fill"
        android:id="@+id/playerTwoColorPickerButton"
        android:layout_column="1"
        android:onClick="onPlayerColorButtonClick"
        android:text="Change\ncolor" />

    <Space
        android:layout_row="4"
        android:layout_rowWeight="4" />

    <Button
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="0.1"
        android:layout_column="0"
        android:onClick="onReturnButtonClick"
        android:text="back" />

    <Button
        android:layout_gravity="fill"
        android:layout_column="1"
        android:onClick="onApplyButtonClick"
        android:text=" Apply\nChanges" />

</GridLayout>